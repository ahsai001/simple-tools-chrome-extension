{
	"manifest_version":3,
	"name":"Simple Tools",
	"description":"Some tools to make your life easier",
	"version":"1.0.0",
	"action":{
		"default_popup":"popup/index.html",
		"default_icon":"images/simple_tools_icon.png"
	},
	"permissions": [
		"contextMenus"
	],
	"background": {
		"service_worker": "scripts/background.js",
		"type": "module"
	  },
	"icons": {
		"16": "images/simple_tools_icon.png",
		"48": "images/simple_tools_icon.png",
		"128": "images/simple_tools_icon.png"
	}
}
